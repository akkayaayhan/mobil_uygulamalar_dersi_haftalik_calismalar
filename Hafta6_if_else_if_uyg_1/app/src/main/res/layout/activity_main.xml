<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextNumber_Not1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="1.Ders Notunu Giriniz"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextNumber_Not3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:hint="3.Ders Notunu Giriniz"
        android:inputType="text"
        app:layout_constraintEnd_toStartOf="@+id/button_Onayla"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber_Not2" />

    <EditText
        android:id="@+id/editTextNumber_Not2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="22dp"
        android:ems="10"
        android:hint="2.Ders Notunu Giriniz"
        android:inputType="text"
        app:layout_constraintEnd_toStartOf="@+id/button_Onayla"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber_Not1" />

    <Button
        android:id="@+id/button_Onayla"
        android:layout_width="0dp"
        android:layout_height="99dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="35dp"
        android:onClick="onayla"
        android:text="Onayla"
        app:layout_constraintBottom_toBottomOf="@+id/editTextNumber_Not3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editTextNumber_Not3"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber_Not1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginBottom="172dp"
        android:text="Ortalama =0"
        android:textColor="@color/design_default_color_error"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>